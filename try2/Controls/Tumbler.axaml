<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Design.PreviewWith>
		<Border Padding="20">
			<!-- Add Controls for Previewer Here -->
			<CheckBox Classes ="Tumbler" Width="100"></CheckBox>
		</Border>
	</Design.PreviewWith>

	<!-- Add Styles Here -->
	<Style Selector="CheckBox.Tumbler:checked">
		<Setter Property="Width" Value="{Binding mWidth}"></Setter>
		<Setter Property="Height" Value="{Binding mHeight}"></Setter>
		<Setter Property="Template">
			<ControlTemplate>
				<Grid>
					<Image Width="{Binding mWidth}"
						   Height="{Binding mHeight}"
						   Source="/Assets/TumblerOn.png"
					   />
				</Grid>
			</ControlTemplate>
		</Setter>
	</Style>
	<Style Selector="CheckBox.Tumbler:unchecked">
		<Setter Property="Width" Value="{Binding mWidth}"></Setter>
		<Setter Property="Height" Value="{Binding mHeight}"></Setter>
		<Setter Property="Template">
			<ControlTemplate>
				<Grid>
					<Image Width="{Binding mWidth}"
						   Height="{Binding mHeight}"
						   Source="/Assets/TumblerOff.png"
					   />
				</Grid>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
